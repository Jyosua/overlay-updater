<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:OverlayUpdater.ViewModels;assembly=OverlayUpdater"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OverlayUpdater.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="OverlayUpdater">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid ColumnDefinitions="1*,11*" RowDefinitions="Auto,Auto"  Margin="4">
    <Button x:Name="SelectButton" Command="{Binding SelectClickCommand}" Grid.Column="0" Grid.Row="0">Select JSON File</Button>
    <TextBox Text="{Binding JsonPath}" Margin="0 0 5 0" Grid.Column="1" Grid.Row="0"  IsReadOnly="True" />

    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="1"/>
  </Grid>

    


</Window>
